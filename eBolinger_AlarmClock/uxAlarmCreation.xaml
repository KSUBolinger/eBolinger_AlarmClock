<Window x:Class="eBolinger_AlarmClock.uxAlarmCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eBolinger_AlarmClock"
        mc:Ignorable="d"
        Title="Alarm Creation" Height="450" Width="800">
    <Grid>
        <RadioButton Name ="OnSelection" Content="On" HorizontalAlignment="Left" Height="16" Margin="528,116,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Name="CancelButton" Content="Cancel" Click ="OnButtonClick" HorizontalAlignment="Left" Height="51" Margin="101,265,0,0" VerticalAlignment="Top" Width="126"/>
        <Button Name ="SetButton" Content="Set" Click="OnButtonClick" HorizontalAlignment="Left" Height="51" Margin="449,265,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBox Name="TimeDisplay" HorizontalAlignment="Left" Height="16" Margin="101,116,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="246"/>
    </Grid>
</Window>
